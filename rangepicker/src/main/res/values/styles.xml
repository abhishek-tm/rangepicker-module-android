<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/color_primary
        </item>
    </style>

    <style name="Calendar" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="colorControlHighlight">@color/color_primary_dark</item>
    </style>

    <style name="StandardTile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="StandardTile.WithPadding">
        <item name="contentPadding">12dp</item>
    </style>
</resources>